<Window x:Class="UnderstandDataGrid1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnderstandDataGrid1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="250"
        Width="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <DataGrid x:Name="UnderstandDataGrid"
              CanUserAddRows="False">
      
    </DataGrid>

    <StackPanel Orientation="Horizontal"
                Grid.Row="1">
      <Button x:Name="AddButton"
              Content="_Add"
              Width="40"
              Margin="0,0,5,0"
              Click="AddButton_Click"/>
      <ComboBox x:Name="AddComboBox"
                SelectedIndex="1"
                Width="50"
                Margin="0,0,5,0">
      </ComboBox>
      <Button x:Name="WatchButton"
              Content="_Watch"
              Width="40"
              Margin="0,0,5,0"
              Click="WatchButton_Click"/>
      <Button x:Name="GotoButton"
              Content="_Goto"
              Width="40"
              Margin="0,0,5,0"
              Click="GotoButton_Click"/>
    </StackPanel>
    
  </Grid>
</Window>
